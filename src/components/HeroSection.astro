---
import { Image } from 'astro:assets';
import heroImage from '@/assets/melbourne-warehouse-make-good-services.jpg';
import HeroContent from './HeroContent';
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Optimized hero background image with responsive srcset -->
  <div class="absolute inset-0 z-0">
    <Image 
      src={heroImage} 
      alt="Melbourne warehouse and commercial space requiring end of lease make good restoration services"
      class="w-full h-full object-cover"
      widths={[360, 640, 1024, 1920]}
      sizes="(max-width: 640px) 360px, (max-width: 1024px) 640px, (max-width: 1536px) 1024px, 1920px"
      loading="eager"
      decoding="async"
      fetchpriority="high"
      quality={70}
    />
  </div>
  
  <!-- Interactive content as React island -->
  <HeroContent client:load />
</section>
