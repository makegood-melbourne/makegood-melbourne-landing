---
interface Props {
  variant?: 'default' | 'contact';
}

const { variant = 'default' } = Astro.props;

const isContact = variant === 'contact';

// Default variant content
const defaultContent = {
  headline: 'Got a project coming up?',
  tagline: 'We do makegoods all day, every day.',
  supportText: "Let's talk scope.",
  primaryButton: 'Request a Quote',
  primaryLink: '/contact',
  secondaryButton: 'Email Us',
  secondaryLink: 'mailto:info@makegood.melbourne',
  expectationSetter: "Share the details and we'll come back to you with how we can help."
};

// Contact page variant content
const contactContent = {
  headline: 'Ready to Get Started?',
  supportText: "Whether you have questions about your lease requirements, need make safe works or want to discuss your next project, we're here to help.",
  primaryButton: 'Fill Out The Form Above',
  primaryLink: '#contact-form'
};

const content = isContact ? contactContent : defaultContent;
---

<section class="py-12 md:py-16 bg-secondary">
  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-heading-2 mb-3 text-foreground">{content.headline}</h2>
      {!isContact && (
        <p class="text-body-lead text-tertiary font-medium italic mb-6">{defaultContent.tagline}</p>
      )}
      <p class="text-body-lead text-foreground mb-6">
        {content.supportText}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        {isContact ? (
          <a
            href={content.primaryLink}
            class="inline-flex items-center justify-center rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 ring-offset-background bg-primary text-primary-foreground hover:bg-primary/90 h-11 px-8"
          >
            {content.primaryButton}
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ml-2"><path d="m18 15-6-6-6 6"/></svg>
          </a>
        ) : (
          <>
            <a
              href={defaultContent.primaryLink}
              class="inline-flex items-center justify-center rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 ring-offset-background bg-primary text-primary-foreground hover:bg-primary/90 h-11 px-8"
            >
              {defaultContent.primaryButton}
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ml-2"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
            </a>
            <a
              href={defaultContent.secondaryLink}
              class="inline-flex items-center justify-center rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 ring-offset-background border border-white/50 text-white hover:bg-white/10 hover:border-white h-11 px-8"
            >
              {defaultContent.secondaryButton}
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ml-2"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
            </a>
          </>
        )}
      </div>
      {!isContact && (
        <p class="text-body-lead text-foreground mt-6">
          {defaultContent.expectationSetter}
        </p>
      )}
    </div>
  </div>
</section>
