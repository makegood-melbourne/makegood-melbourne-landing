---
/**
 * Services Index Page
 * 
 * Central hub for all service offerings. Mirrors the homepage "Our Services" section
 * structure and provides a consistent, SEO-optimised entry point for users exploring services.
 */
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import CtaBlock from '../../components/CtaBlock.astro';
import Footer from '../../components/Footer';
import { Image } from 'astro:assets';

// Import hero images
import servicesHero from "@/assets/images/hero/commercial-make-good-services-melbourne.webp";
import stripOutHero from "@/assets/services/commercial-industrial-strip-out-melbourne.jpg";
import makeGoodHero from "@/assets/services/melbourne-warehouse-make-good-hero.jpg";
import buildingRemediationHero from "@/assets/services/building-remediation-melbourne-shotcrete.jpg";
import handoverHero from "@/assets/services/commercial-floor-sweeping-concrete-melbourne.jpeg";

// Service cards data
const serviceCards = [
  {
    id: 'strip-outs',
    title: 'STRIP OUT SOLUTIONS',
    description: 'Fitout removal, demolition, and make-safe. Clear the space so the next phase can start.',
    categoryLink: '/services/strip-out-solutions/',
    ctaLabel: 'Strip Out Solutions',
    heroImage: stripOutHero,
    heroImageAlt: 'Commercial and industrial strip out works in Melbourne warehouse',
    chips: [
      { label: 'Demolition', href: '/services/strip-out-solutions/demolition/' },
      { label: 'Make Safe', href: '/services/strip-out-solutions/make-safe/' },
      { label: 'Pallet Racking Removal', href: '/services/strip-out-solutions/pallet-racking-removal/' },
    ],
  },
  {
    id: 'remediation',
    title: 'REMEDIATION SOLUTIONS',
    description: 'Structural repairs, waterproofing, cladding compliance. Problems fixed at the source.',
    categoryLink: '/services/remediation-solutions/',
    ctaLabel: 'Remediation Solutions',
    heroImage: buildingRemediationHero,
    heroImageAlt: 'Building remediation and structural repair works in Melbourne',
    chips: [
      { label: 'Structural', href: '/services/remediation-solutions/structural/' },
      { label: 'Waterproofing', href: '/services/remediation-solutions/waterproofing/' },
      { label: 'Cladding & Glazing', href: '/services/remediation-solutions/cladding-glazing/' },
      { label: 'Polycarbonate Roofing & Skylights', href: '/services/remediation-solutions/polycarbonate-roofing-skylights/' },
    ],
  },
  {
    id: 'make-goods',
    title: 'MAKE GOOD SOLUTIONS',
    description: 'Restoring spaces to original condition. Floors, walls, ceilings—back to how it was.',
    categoryLink: '/services/make-good-solutions/',
    ctaLabel: 'Make Good Solutions',
    heroImage: makeGoodHero,
    heroImageAlt: 'Make good restoration works in Melbourne warehouse',
    chips: [
      { label: 'Flooring Reinstatement', href: '/services/make-good-solutions/flooring-reinstatement/' },
      { label: 'Line Marking', href: '/services/make-good-solutions/line-marking/' },
      { label: 'Painting', href: '/services/make-good-solutions/painting/' },
      { label: 'Patching & Plastering', href: '/services/make-good-solutions/patching-plastering/' },
      { label: 'Suspended Ceilings', href: '/services/make-good-solutions/suspended-ceilings/' },
    ],
  },
  {
    id: 'handover',
    title: 'HANDOVER SOLUTIONS',
    description: 'The final push. Cleaning, relocation, and everything needed to hand back the keys.',
    categoryLink: '/services/handover-solutions/end-of-lease-cleaning/',
    ctaLabel: 'Handover Solutions',
    heroImage: handoverHero,
    heroImageAlt: 'End of lease cleaning and handover services in Melbourne',
    chips: [
      { label: 'End of Lease Cleaning', href: '/services/handover-solutions/end-of-lease-cleaning/' },
      { label: 'End of Lease Relocation', href: '/services/handover-solutions/end-of-lease-relocation/' },
    ],
  },
];

// Trust badges
const trustBadges = [
  { icon: "shield", title: "Licensed & Insured" },
  { icon: "clipboard", title: "Lease Compliance Experts" },
  { icon: "dollar", title: "Fixed-Price Quotes" },
  { icon: "document", title: "Full Project Documentation" }
];
---

<BaseLayout 
  title="Services | Commercial Make Good & Remediation Melbourne"
  description="End-of-lease make goods, strip outs, remediation and handover services in Melbourne. All trades, one point of contact. View our full range of commercial and industrial services."
  canonicalUrl="https://makegood.melbourne/services/"
  ogImage="/og/commercial.jpg"
>
  <div class="min-h-screen flex flex-col bg-background">
    <!-- Skip to Content Link for Accessibility -->
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-[100] focus:px-4 focus:py-2 focus:bg-primary focus:text-primary-foreground focus:rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary"
    >
      Skip to main content
    </a>
    
    <Navigation client:idle />
    
    <!-- Breadcrumbs -->
    <div class="bg-secondary pt-20">
      <Breadcrumbs path="/services" />
    </div>
    
    <main id="main-content" class="flex-1">
      <!-- Hero Section -->
      <section class="bg-secondary pt-6 pb-10 md:pt-10 md:pb-12">
        <div class="container mx-auto px-4">
          <div class="grid lg:grid-cols-2 gap-12 items-center">
            <div>
              <h1 class="services-hero__heading">
                Make Good &<br />
                Remediation Services<br />
                <span class="services-hero__accent">Melbourne</span>
              </h1>
              <!-- Hero Image - Mobile only -->
              <div class="lg:hidden mb-6">
                <Image 
                  src={servicesHero}
                  alt="Commercial make good team working in large Melbourne warehouse space"
                  class="aspect-[4/3] w-full object-cover rounded-lg"
                  width={800}
                  height={600}
                  loading="eager"
                />
              </div>
              
              <p class="services-hero__copy">
                Whether your lease is ending or your building needs structural repairs, we handle the full scope—strip outs, make goods, remediation and handover. Every trade coordinated through one point of contact. We manage it all so your handover is complete and on time.
              </p>
              
              <!-- CTA Buttons -->
              <div class="flex flex-col sm:flex-row gap-4">
                <a href="/#contact" class="inline-flex items-center justify-center px-6 py-3 bg-primary hover:bg-primary/90 text-primary-foreground font-medium rounded-md transition-colors">
                  Request a Quote
                </a>
                <a href="mailto:info@makegood.melbourne" class="inline-flex items-center justify-center px-6 py-3 border border-accent text-accent hover:bg-accent hover:text-accent-foreground font-medium rounded-md transition-colors">
                  <svg xmlns="http://www.w3.org/2000/svg" class="mr-2 h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
                  Email Us
                </a>
              </div>
            </div>
            
            <!-- Hero Image - Desktop only -->
            <div class="hidden lg:block">
              <Image 
                src={servicesHero}
                alt="Commercial make good team working in large Melbourne warehouse space"
                class="aspect-[4/3] w-full object-cover rounded-lg"
                width={1600}
                height={1067}
                loading="eager"
              />
            </div>
          </div>

        </div>
      </section>

      <!-- What We Do Section -->
      <section class="py-12 md:py-16 bg-muted/30">
        <div class="container mx-auto px-4 max-w-4xl">
          <h2 class="what-we-do__heading">WHAT WE DO</h2>
          <div class="what-we-do__content">
            <p class="mb-6">
              We deliver end-of-lease and building restoration services for commercial and industrial properties across Melbourne.
            </p>
            <p class="mb-6">
              Make good works return a space to its original condition at lease end—removing fitouts, restoring walls, ceilings and floors, and preparing the tenancy for handover. Remediation addresses deeper building issues: structural defects, water damage, failed waterproofing, non-compliant cladding.
            </p>
            <p>
              Some projects need one or the other. Many need both—remediation to fix the underlying problem, then make good to restore finishes and complete the handover. Either way, we manage the full scope with all trades coordinated through a single point of contact.
            </p>
          </div>
        </div>
      </section>

      <!-- Services Grid Section -->
      <section class="services-grid-section">
        <div class="services-container">
          <!-- Section Header -->
          <div class="section-header">
            <h2 class="section-title">
              <span class="title-white">OUR</span>{' '}
              <span class="title-orange">SERVICES</span>
            </h2>
            <p class="section-subtitle">
              Strip out, make good, handover and building remediation — delivered by one contractor.
            </p>
          </div>

          <!-- 2x2 Grid -->
          <div class="services-grid">
            {serviceCards.map((card) => (
              <article class="service-card" data-card={card.id}>
                <!-- Image Area with Title Overlay - Entire image is clickable -->
                <a href={card.categoryLink} class="card-image-link">
                  <div class="card-image-wrapper">
                    <Image
                      src={card.heroImage}
                      alt={card.heroImageAlt}
                      class="card-image"
                      loading="lazy"
                      widths={[400, 600, 800]}
                      sizes="(max-width: 768px) 100vw, 50vw"
                    />
                    <div class="image-overlay">
                      <h3 class="card-title">{card.title}</h3>
                    </div>
                  </div>
                </a>

                <!-- Card Content -->
                <div class="card-content">
                  <p class="card-description">{card.description}</p>

                  <!-- Sub-service Chips -->
                  <div class="chips-container">
                    {card.chips.map((chip) => (
                      <a href={chip.href} class="chip">
                        {chip.label}
                      </a>
                    ))}
                  </div>

                  <!-- Primary CTA -->
                  <a href={card.categoryLink} class="card-cta">
                    {card.ctaLabel} <span class="cta-arrow">→</span>
                  </a>
                </div>
              </article>
            ))}
          </div>
        </div>
      </section>

      <!-- FAQ Section -->
      <section class="py-12 md:py-16 bg-secondary">
        <div class="container mx-auto px-4 max-w-4xl">
          <div class="text-center mb-10">
            <h2 class="text-3xl md:text-4xl font-bold text-foreground mb-4">
              Common Questions
            </h2>
          </div>
          <div class="space-y-4">
            <details class="faq-item bg-background border border-border rounded-lg px-6 group">
              <summary class="faq-question text-left text-lg font-medium hover:text-primary py-5 cursor-pointer list-none flex items-center justify-between">
                <span>Do you handle the entire project or just specific trades?</span>
                <svg class="faq-chevron h-5 w-5 shrink-0 transition-transform duration-200 text-muted-foreground" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m6 9 6 6 6-6"/></svg>
              </summary>
              <div class="faq-answer text-muted-foreground text-base pb-5 leading-relaxed">
                The entire project. We coordinate all trades—demolition, electrical, plumbing, painting, flooring, cleaning—through one point of contact. You deal with us, we deal with everyone else.
              </div>
            </details>
            <details class="faq-item bg-background border border-border rounded-lg px-6 group">
              <summary class="faq-question text-left text-lg font-medium hover:text-primary py-5 cursor-pointer list-none flex items-center justify-between">
                <span>What types of properties do you work on?</span>
                <svg class="faq-chevron h-5 w-5 shrink-0 transition-transform duration-200 text-muted-foreground" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m6 9 6 6 6-6"/></svg>
              </summary>
              <div class="faq-answer text-muted-foreground text-base pb-5 leading-relaxed">
                Commercial and industrial. Offices, retail, warehouses, factories, showrooms. If it's a commercial lease or a building that needs remediation, we can help.
              </div>
            </details>
            <details class="faq-item bg-background border border-border rounded-lg px-6 group">
              <summary class="faq-question text-left text-lg font-medium hover:text-primary py-5 cursor-pointer list-none flex items-center justify-between">
                <span>How do I know which service I need?</span>
                <svg class="faq-chevron h-5 w-5 shrink-0 transition-transform duration-200 text-muted-foreground" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m6 9 6 6 6-6"/></svg>
              </summary>
              <div class="faq-answer text-muted-foreground text-base pb-5 leading-relaxed">
                Tell us what's happening—lease ending, structural issue, damage repair—and we'll scope it. Most projects involve multiple services. We'll recommend what's needed and quote accordingly.
              </div>
            </details>
          </div>
          <div class="text-center mt-10">
            <a href="/faq/" class="inline-flex items-center justify-center gap-2 rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 border border-input bg-background hover:bg-accent hover:text-accent-foreground h-11 px-8">
              More Questions? See Our FAQ
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
            </a>
          </div>
        </div>
      </section>

      <!-- CTA Block -->
      <div class="cta-wrapper">
        <CtaBlock />
      </div>
    </main>
    
    <Footer client:idle />
  </div>
</BaseLayout>

<style>
  /* TODO: Update to standardised typography classes after brand guideline implementation */
  
  /* Hero Typography - Interim styling matching existing site patterns */
  .services-hero__heading {
    font-size: clamp(28px, 3.5vw, 40px);
    font-weight: 700;
    line-height: 1.25;
    letter-spacing: -0.01em;
    color: #ffffff;
    margin-bottom: 12px;
  }
  .services-hero__accent {
    color: #F28C3A;
  }
  .services-hero__subheading {
    font-size: clamp(22px, 2.5vw, 28px);
    font-weight: 600;
    color: #3B82F6;
    margin-bottom: 24px;
    line-height: 1.3;
  }
  .services-hero__copy {
    font-size: 18px;
    line-height: 1.6;
    color: #ffffff;
    margin-bottom: 32px;
  }
  
  @media (max-width: 600px) {
    .services-hero__copy {
      font-size: 16px;
    }
  }

  /* What We Do Section */
  .what-we-do__heading {
    font-size: clamp(28px, 3.5vw, 40px);
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 24px;
    text-transform: uppercase;
    letter-spacing: 0.02em;
  }
  .what-we-do__content {
    color: #ffffff;
    font-size: 18px;
    line-height: 1.7;
  }
  .what-we-do__content p {
    margin-bottom: 1.5rem;
  }
  .what-we-do__content p:last-child {
    margin-bottom: 0;
  }
  @media (max-width: 600px) {
    .what-we-do__content {
      font-size: 16px;
    }
  }

  .services-grid-section {
    background-color: hsl(0 0% 18%);
    padding: 5rem 0;
  }

  .services-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Section Header */
  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1rem;
  }

  .title-white {
    color: #ffffff;
  }

  .title-orange {
    color: hsl(25 85% 60%);
  }

  .section-subtitle {
    color: #9ca3af;
    font-size: 1.125rem;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* Grid Layout */
  .services-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  @media (max-width: 768px) {
    .services-grid {
      grid-template-columns: 1fr;
    }
  }

  /* Card Styling */
  .service-card {
    background-color: hsl(0 0% 16%);
    border-radius: 0.75rem;
    overflow: hidden;
    border: 1px solid hsl(0 0% 25%);
    transition: transform 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .service-card:hover {
    transform: translateY(-4px);
    border-color: hsl(25 85% 60%);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
  }

  /* Image Link - Makes entire image clickable */
  .card-image-link {
    display: block;
    text-decoration: none;
  }

  .card-image-link:focus {
    outline: 2px solid hsl(25 85% 60%);
    outline-offset: 2px;
  }

  /* Image Area */
  .card-image-wrapper {
    position: relative;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    backface-visibility: hidden;
    transform: translateZ(0);
    will-change: transform;
  }

  .card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
    display: block;
    pointer-events: none;
    backface-visibility: hidden;
    transform: translateZ(0);
  }

  .card-image-link:hover .card-image {
    transform: scale(1.05);
  }

  /* Gradient Overlay */
  .image-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 2rem 1.5rem 1rem;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.85) 0%, rgba(0, 0, 0, 0.4) 60%, transparent 100%);
    pointer-events: none;
  }

  .card-title {
    color: #ffffff;
    font-size: 1.5rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0;
  }

  /* Card Content */
  .card-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .card-description {
    color: #ffffff;
    font-size: 1rem;
    line-height: 1.6;
    margin-bottom: 1.25rem;
  }

  /* Chips Container */
  .chips-container {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .chip {
    display: inline-block;
    padding: 0.375rem 0.75rem;
    background-color: hsl(0 0% 25%);
    color: #ffffff;
    font-size: 0.875rem;
    border-radius: 9999px;
    border: 1px solid hsl(0 0% 30%);
    text-decoration: none;
    transition: background-color 0.2s ease, border-color 0.2s ease;
  }

  .chip:hover {
    background-color: hsl(0 0% 30%);
    border-color: hsl(0 0% 40%);
  }

  .chip:focus {
    outline: 2px solid hsl(25 85% 60%);
    outline-offset: 2px;
  }

  /* Primary CTA */
  .card-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: hsl(25 85% 60%);
    font-weight: 600;
    text-decoration: none;
    margin-top: auto;
    transition: gap 0.2s ease;
  }

  .card-cta:hover {
    gap: 0.75rem;
  }

  .card-cta:focus {
    outline: 2px solid hsl(25 85% 60%);
    outline-offset: 2px;
  }

  .cta-arrow {
    transition: transform 0.2s ease;
  }

  .card-cta:hover .cta-arrow {
    transform: translateX(4px);
  }

  /* FAQ Styles */
  details[open] .faq-chevron {
    transform: rotate(180deg);
  }
  details[open] {
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
  }
  summary::-webkit-details-marker {
    display: none;
  }
  /* CTA Wrapper - Override component background for alternating pattern */
  .cta-wrapper :global(section) {
    background-color: hsl(0 0% 25% / 0.3);
  }
</style>
