---
/**
 * Services Index Page
 * 
 * Central hub for all service offerings. Mirrors the homepage "Our Services" section
 * structure and provides a consistent, SEO-optimised entry point for users exploring services.
 */
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import CtaBlock from '../../components/CtaBlock.astro';
import Footer from '../../components/Footer';
import { Image } from 'astro:assets';

// Import hero images
import stripOutHero from "@/assets/services/commercial-industrial-strip-out-melbourne.jpg";
import makeGoodHero from "@/assets/services/melbourne-warehouse-make-good-hero.jpg";
import buildingRemediationHero from "@/assets/services/building-remediation-melbourne-shotcrete.jpg";
import handoverHero from "@/assets/services/commercial-floor-sweeping-concrete-melbourne.jpeg";

// Service cards data
const serviceCards = [
  {
    id: 'strip-outs',
    title: 'STRIP OUT SOLUTIONS',
    description: 'Fitout removal, demolition, and make-safe. Clear the space so the next phase can start.',
    categoryLink: '/services/strip-out-solutions/',
    ctaLabel: 'Strip Out Solutions',
    heroImage: stripOutHero,
    heroImageAlt: 'Commercial and industrial strip out works in Melbourne warehouse',
    chips: [
      { label: 'Demolition', href: '/services/strip-out-solutions/demolition/' },
      { label: 'Make Safe', href: '/services/strip-out-solutions/make-safe/' },
      { label: 'Pallet Racking Removal', href: '/services/strip-out-solutions/pallet-racking-removal/' },
    ],
  },
  {
    id: 'remediation',
    title: 'REMEDIATION SOLUTIONS',
    description: 'Structural repairs, waterproofing, cladding compliance. Problems fixed at the source.',
    categoryLink: '/services/remediation-solutions/',
    ctaLabel: 'Remediation Solutions',
    heroImage: buildingRemediationHero,
    heroImageAlt: 'Building remediation and structural repair works in Melbourne',
    chips: [
      { label: 'Structural', href: '/services/remediation-solutions/structural/' },
      { label: 'Waterproofing', href: '/services/remediation-solutions/waterproofing/' },
      { label: 'Cladding & Glazing', href: '/services/remediation-solutions/cladding-glazing/' },
      { label: 'Polycarbonate Roofing & Skylights', href: '/services/remediation-solutions/polycarbonate-roofing-skylights/' },
    ],
  },
  {
    id: 'make-goods',
    title: 'MAKE GOOD SOLUTIONS',
    description: 'Restoring spaces to original condition. Floors, walls, ceilings—back to how it was.',
    categoryLink: '/services/make-good-solutions/',
    ctaLabel: 'Make Good Solutions',
    heroImage: makeGoodHero,
    heroImageAlt: 'Make good restoration works in Melbourne warehouse',
    chips: [
      { label: 'Flooring Reinstatement', href: '/services/make-good-solutions/flooring-reinstatement/' },
      { label: 'Line Marking', href: '/services/make-good-solutions/line-marking/' },
      { label: 'Painting', href: '/services/make-good-solutions/painting/' },
      { label: 'Patching & Plastering', href: '/services/make-good-solutions/patching-plastering/' },
      { label: 'Suspended Ceilings', href: '/services/make-good-solutions/suspended-ceilings/' },
    ],
  },
  {
    id: 'handover',
    title: 'HANDOVER SOLUTIONS',
    description: 'The final push. Cleaning, relocation, and everything needed to hand back the keys.',
    categoryLink: '/services/handover-solutions/end-of-lease-cleaning/',
    ctaLabel: 'Handover Solutions',
    heroImage: handoverHero,
    heroImageAlt: 'End of lease cleaning and handover services in Melbourne',
    chips: [
      { label: 'End of Lease Cleaning', href: '/services/handover-solutions/end-of-lease-cleaning/' },
      { label: 'End of Lease Relocation', href: '/services/handover-solutions/end-of-lease-relocation/' },
    ],
  },
];

// Trust badges
const trustBadges = [
  { icon: "shield", title: "Licensed & Insured" },
  { icon: "clipboard", title: "Lease Compliance Experts" },
  { icon: "dollar", title: "Fixed-Price Quotes" },
  { icon: "document", title: "Full Project Documentation" }
];
---

<BaseLayout 
  title="Services | Commercial Make Good & Remediation Melbourne"
  description="End-of-lease make goods, strip outs, remediation and handover services in Melbourne. All trades, one point of contact. View our full range of commercial and industrial services."
  canonicalUrl="https://makegood.melbourne/services/"
  ogImage="/og/commercial.jpg"
>
  <div class="min-h-screen flex flex-col bg-background">
    <!-- Skip to Content Link for Accessibility -->
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-[100] focus:px-4 focus:py-2 focus:bg-primary focus:text-primary-foreground focus:rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary"
    >
      Skip to main content
    </a>
    
    <Navigation client:idle />
    
    <!-- Breadcrumbs -->
    <div class="bg-secondary pt-20">
      <Breadcrumbs path="/services" />
    </div>
    
    <main id="main-content" class="flex-1">
      <!-- Hero Section -->
      <section class="bg-secondary pt-6 pb-10 md:pt-10 md:pb-12">
        <div class="container mx-auto px-4">
          <div class="grid lg:grid-cols-2 gap-12 items-center">
            <div>
              <h1 class="text-4xl md:text-5xl lg:text-6xl text-foreground mb-6">
                SERVICES
              </h1>
              
              <!-- Hero Image - Mobile only -->
              <div class="lg:hidden mb-6">
                <Image 
                  src={stripOutHero}
                  alt="Commercial make good and remediation services in Melbourne"
                  class="aspect-[4/3] w-full object-cover rounded-lg"
                  width={800}
                  height={600}
                  loading="eager"
                />
              </div>
              
              <p class="text-xl text-muted-foreground mb-8">
                End-of-lease make goods, strip outs, remediation and handover. All trades, one point of contact. We manage the full scope so your handover is completed on time.
              </p>
              
              <!-- CTA Buttons -->
              <div class="flex flex-col sm:flex-row gap-4">
                <a href="/#contact" class="inline-flex items-center justify-center px-6 py-3 bg-primary hover:bg-primary/90 text-primary-foreground font-medium rounded-md transition-colors">
                  Request a Quote
                </a>
                <a href="mailto:info@makegood.melbourne" class="inline-flex items-center justify-center px-6 py-3 border border-accent text-accent hover:bg-accent hover:text-accent-foreground font-medium rounded-md transition-colors">
                  <svg xmlns="http://www.w3.org/2000/svg" class="mr-2 h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
                  Email Us
                </a>
              </div>
            </div>
            
            <!-- Hero Image - Desktop only -->
            <div class="hidden lg:block">
              <Image 
                src={stripOutHero}
                alt="Commercial make good and remediation services in Melbourne"
                class="aspect-[4/3] w-full object-cover rounded-lg"
                width={800}
                height={600}
                loading="eager"
              />
            </div>
          </div>
          
          <!-- Trust Badges -->
          <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mt-10">
            <div class="flex flex-col items-center text-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-muted-foreground" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"/></svg>
              <span class="text-sm font-medium text-muted-foreground">Licensed & Insured</span>
            </div>
            <div class="flex flex-col items-center text-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-muted-foreground" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="8" height="4" x="8" y="2" rx="1" ry="1"/><path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"/><path d="m9 14 2 2 4-4"/></svg>
              <span class="text-sm font-medium text-muted-foreground">Lease Compliance Experts</span>
            </div>
            <div class="flex flex-col items-center text-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-muted-foreground" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 3h12"/><path d="M6 8h12"/><path d="m6 13 8.5 8"/><path d="M6 13h3"/><path d="M9 13c6.667 0 6.667-10 0-10"/></svg>
              <span class="text-sm font-medium text-muted-foreground">Fixed-Price Quotes</span>
            </div>
            <div class="flex flex-col items-center text-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-muted-foreground" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7Z"/><path d="M14 2v4a2 2 0 0 0 2 2h4"/><path d="M10 9H8"/><path d="M16 13H8"/><path d="M16 17H8"/></svg>
              <span class="text-sm font-medium text-muted-foreground">Full Project Documentation</span>
            </div>
          </div>
        </div>
      </section>

      <!-- Services Grid Section -->
      <section class="services-grid-section">
        <div class="services-container">
          <!-- Section Header -->
          <div class="section-header">
            <h2 class="section-title">
              <span class="title-white">OUR</span>{' '}
              <span class="title-orange">SERVICES</span>
            </h2>
            <p class="section-subtitle">
              Strip out, make good, handover and building remediation — delivered by one contractor.
            </p>
          </div>

          <!-- 2x2 Grid -->
          <div class="services-grid">
            {serviceCards.map((card) => (
              <article class="service-card" data-card={card.id}>
                <!-- Image Area with Title Overlay - Entire image is clickable -->
                <a href={card.categoryLink} class="card-image-link">
                  <div class="card-image-wrapper">
                    <Image
                      src={card.heroImage}
                      alt={card.heroImageAlt}
                      class="card-image"
                      loading="lazy"
                      widths={[400, 600, 800]}
                      sizes="(max-width: 768px) 100vw, 50vw"
                    />
                    <div class="image-overlay">
                      <h3 class="card-title">{card.title}</h3>
                    </div>
                  </div>
                </a>

                <!-- Card Content -->
                <div class="card-content">
                  <p class="card-description">{card.description}</p>

                  <!-- Sub-service Chips -->
                  <div class="chips-container">
                    {card.chips.map((chip) => (
                      <a href={chip.href} class="chip">
                        {chip.label}
                      </a>
                    ))}
                  </div>

                  <!-- Primary CTA -->
                  <a href={card.categoryLink} class="card-cta">
                    {card.ctaLabel} <span class="cta-arrow">→</span>
                  </a>
                </div>
              </article>
            ))}
          </div>
        </div>
      </section>

      <!-- CTA Block -->
      <CtaBlock />
    </main>
    
    <Footer client:idle />
  </div>
</BaseLayout>

<style>
  .services-grid-section {
    background-color: hsl(0 0% 18%);
    padding: 5rem 0;
  }

  .services-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Section Header */
  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1rem;
  }

  .title-white {
    color: #ffffff;
  }

  .title-orange {
    color: hsl(25 85% 60%);
  }

  .section-subtitle {
    color: #9ca3af;
    font-size: 1.125rem;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* Grid Layout */
  .services-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  @media (max-width: 768px) {
    .services-grid {
      grid-template-columns: 1fr;
    }
  }

  /* Card Styling */
  .service-card {
    background-color: hsl(0 0% 16%);
    border-radius: 0.75rem;
    overflow: hidden;
    border: 1px solid hsl(0 0% 25%);
    transition: transform 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .service-card:hover {
    transform: translateY(-4px);
    border-color: hsl(25 85% 60%);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
  }

  /* Image Link - Makes entire image clickable */
  .card-image-link {
    display: block;
    text-decoration: none;
  }

  .card-image-link:focus {
    outline: 2px solid hsl(25 85% 60%);
    outline-offset: 2px;
  }

  /* Image Area */
  .card-image-wrapper {
    position: relative;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    backface-visibility: hidden;
    transform: translateZ(0);
    will-change: transform;
  }

  .card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
    display: block;
    pointer-events: none;
    backface-visibility: hidden;
    transform: translateZ(0);
  }

  .card-image-link:hover .card-image {
    transform: scale(1.05);
  }

  /* Gradient Overlay */
  .image-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 2rem 1.5rem 1rem;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.85) 0%, rgba(0, 0, 0, 0.4) 60%, transparent 100%);
    pointer-events: none;
  }

  .card-title {
    color: #ffffff;
    font-size: 1.5rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0;
  }

  /* Card Content */
  .card-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .card-description {
    color: #ffffff;
    font-size: 1rem;
    line-height: 1.6;
    margin-bottom: 1.25rem;
  }

  /* Chips Container */
  .chips-container {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .chip {
    display: inline-block;
    padding: 0.375rem 0.75rem;
    background-color: hsl(0 0% 25%);
    color: #ffffff;
    font-size: 0.875rem;
    border-radius: 9999px;
    border: 1px solid hsl(0 0% 30%);
    text-decoration: none;
    transition: background-color 0.2s ease, border-color 0.2s ease;
  }

  .chip:hover {
    background-color: hsl(0 0% 30%);
    border-color: hsl(0 0% 40%);
  }

  .chip:focus {
    outline: 2px solid hsl(25 85% 60%);
    outline-offset: 2px;
  }

  /* Primary CTA */
  .card-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: hsl(25 85% 60%);
    font-weight: 600;
    text-decoration: none;
    margin-top: auto;
    transition: gap 0.2s ease;
  }

  .card-cta:hover {
    gap: 0.75rem;
  }

  .card-cta:focus {
    outline: 2px solid hsl(25 85% 60%);
    outline-offset: 2px;
  }

  .cta-arrow {
    transition: transform 0.2s ease;
  }

  .card-cta:hover .cta-arrow {
    transform: translateX(4px);
  }
</style>
