---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation';
import LocationHeroSection from '../../components/LocationHeroSection.astro';
import LocationContent from '../../page-components/LocationContent.tsx';
import Footer from '../../components/Footer';
import { locations, getLocationBySlug } from '../../data/locations';

export function getStaticPaths() {
  return locations.map((location) => ({
    params: { slug: location.slug },
    props: { location },
  }));
}

const { slug } = Astro.params;
const location = getLocationBySlug(slug);

if (!location) {
  return Astro.redirect('/service-areas');
}
---

<BaseLayout 
  title={location.metaTitle}
  description={location.metaDescription}
  ogImage="/og/locations-default.jpg"
  canonicalUrl={`https://makegood.melbourne/areas/${location.slug}`}
>
  <Navigation client:load />
  
  <!-- Static optimized hero section with breadcrumbs -->
  <LocationHeroSection slug={slug} />
  
  <!-- Interactive content loaded after hero -->
  <LocationContent slug={slug} client:idle />
  
  <Footer client:idle />
</BaseLayout>
