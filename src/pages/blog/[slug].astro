---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation';
import BlogHeroSection from '../../components/BlogHeroSection.astro';
import BlogContent from '../../page-components/BlogContent.tsx';
import Footer from '../../components/Footer';
import { blogPosts, getBlogPostBySlug } from '../../data/blogPosts';

export function getStaticPaths() {
  return blogPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { slug } = Astro.params;
const post = getBlogPostBySlug(slug);

if (!post) {
  return Astro.redirect('/blog');
}

const description = post.metaDescription || post.excerpt;

// Construct OG image path from the blog image filename (strip extension and use .jpg)
const imageFileName = (post.image?.split('/').pop() || post.image).replace(/^\.+\//, '');
const imageBaseName = imageFileName.replace(/\.(webp|jpg|jpeg|png)$/i, '');
const ogImage = `/og/blog/${imageBaseName}.jpg`;
---

<BaseLayout 
  title={`${post.title} | Make Good Melbourne`}
  description={description}
  ogImage={ogImage}
  canonicalUrl={`https://makegood.melbourne/blog/${post.slug}`}
>
  <script slot="head" type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    "headline": post.title,
    "description": description,
    "image": `https://makegood.melbourne${ogImage}`,
    "datePublished": post.date,
    "dateModified": post.date,
    "author": {
      "@type": "Organization",
      "name": "Make Good Melbourne",
      "url": "https://makegood.melbourne"
    },
    "publisher": {
      "@type": "Organization",
      "name": "Make Good Melbourne",
      "url": "https://makegood.melbourne",
      "logo": {
        "@type": "ImageObject",
        "url": "https://makegood.melbourne/logo.png"
      }
    },
    "mainEntityOfPage": {
      "@type": "WebPage",
      "@id": `https://makegood.melbourne/blog/${post.slug}`
    }
  })} />
  <meta slot="head" property="og:type" content="article" />
  <meta slot="head" property="article:published_time" content={post.date} />
  <meta slot="head" property="article:modified_time" content={post.date} />
  <meta slot="head" property="article:author" content="Make Good Melbourne" />
  <div class="min-h-screen flex flex-col">
    <Navigation client:load />
    
    <!-- Static optimized hero section with breadcrumbs and featured image -->
    <BlogHeroSection slug={slug} />
    
    <!-- Interactive content loaded after hero -->
    <BlogContent slug={slug} client:idle />
    
    <Footer client:idle />
  </div>
</BaseLayout>
